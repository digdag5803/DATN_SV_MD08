<div class="flex items-center justify-between mb-4">
  <h1 class="text-2xl font-medium">Quản lý đơn hàng</h1>
</div>

<div class="rounded-sm border bg-white px-5 pb-2.5 pt-6 shadow">
  <div class="flex flex-col">
    <div class="grid grid-cols-7 rounded-sm bg-[#f7f9fc]">
      <div class="px-5 py-2.5">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">STT</h5>
      </div>
      <div class="px-5 py-2.5">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">Khách hàng</h5>
      </div>
      <div class="px-5 py-2.5 text-center">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">Tổng tiền</h5>
      </div>
      <div class="px-5 py-2.5 text-center">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">Ngày đặt</h5>
      </div>
      <div class="px-5 py-2.5 text-center">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">Trạng thái</h5>
      </div>
      <div class="px-5 py-2.5 text-center">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">
          TT thanh toán
        </h5>
      </div>
      <div class="px-5 py-2.5 text-center">
        <h5 class="text-sm font-medium uppercase text-[#64748b]">Hành động</h5>
      </div>
    </div>

    <div>
      <% data.forEach((item, index) => { %>
      <div class="grid grid-cols-7 [&:not(:last-child)]:border-b">
        <div class="flex items-center gap-3 p-5">
          <p class="font-medium text-black"><%= index + 1 %></p>
        </div>

        <div class="flex flex-col justify-center p-5">
          <p class="font-medium text-black"><%= item.user_id.full_name %></p>
          <p class="font-medium text-black"><%= item.user_id.phone %></p>
          <p class="font-medium text-black"><%= item.delivered_address %></p>
        </div>

        <div class="flex items-center justify-center p-5">
          <p class="font-medium text-black"><%= item.total_amount %></p>
        </div>

        <div class="flex items-center justify-center p-5">
          <p class="font-medium text-black"><%= item.order_date %></p>
        </div>

        <div class="flex items-center justify-center p-5">
          <p class="font-medium text-black">
            <%= item.status_id.status_name %>
          </p>
        </div>

        <div class="flex items-center justify-center p-5">
          <p class="font-medium text-black"><%= item.payment_status %></p>
        </div>

        <div class="flex items-center justify-center p-5">
          <a href="/orders/<%= item._id %>/view" class="block text-xl">
            <i class="fa-regular fa-eye"></i>
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
